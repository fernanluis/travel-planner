<%= form_with(url: search_path, method: 'get' , local: true) do %>
  <% if flash[:alert] %>
    <%= flash[:alert] %>
  <% end %>
  <%= label_tag :country, 'Search for a country ' %>
  <%= text_field_tag :country, nil, placeholder: 'Ej. Canada', clase: 'form-control' %>
  <%= button_tag 'Search', clase: 'btn btn-success btn-block' %>
<% end %>
